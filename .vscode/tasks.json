{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build release",
      "type": "shell",
      "command": "bazel build :release;echo \"\n#### RELEASE ####\n\";./bazel-bin/release.exe",
      "windows":{
        "command": "bazel build :release;echo \"\n#### RELEASE ####\n\";./bazel-bin/release.exe",
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "build debug",
      "type": "shell",
      "command": "bazel build :debug -c dbg;echo \"\n#### DEBUG ####\n\";./bazel-bin/debug.exe",
      "windows":{
        "command": "bazel build :debug -c dbg;echo \"\n#### DEBUG ####\n\";./bazel-bin/debug.exe",
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "test all",
      "type": "shell",
      "command": "bazel test --test_output=all ////:test_all",
      "windows":{
        "command": "bazel test --test_output=all ///:test_all",
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
  ]
}